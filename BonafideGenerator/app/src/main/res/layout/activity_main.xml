<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/sistlogo"
        android:layout_width="65dp"
        android:layout_height="85dp"
        android:src="@drawable/sistlogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/sathyabama"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sathyabama"
        android:text="SATHYABAMA"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="#FF0000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sistlogo"
        app:layout_constraintRight_toLeftOf="@id/verfication"
        />

    <ImageView
        android:id="@+id/verfication"
        android:layout_width="65dp"
        android:layout_height="85dp"
        android:src="@drawable/logo1"
        app:layout_constraintLeft_toRightOf="@id/sathyabama"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/line1"
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/sathyabama"
        app:layout_constraintLeft_toRightOf="@id/sistlogo"
        app:layout_constraintRight_toLeftOf="@id/verfication"
        />
    <TextView
        android:id="@+id/institute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSTITUTE OF SCIENCE AND TECHNOLOGY"
        android:textStyle="bold"
        android:textColor="#050A30"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintLeft_toRightOf="@id/sistlogo"
        app:layout_constraintRight_toLeftOf="@id/verfication"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deemed"
        android:textColor="#050A30"
        android:text="(DEEMED TO BE UNIVERSITY)"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/institute"
        app:layout_constraintLeft_toRightOf="@id/sistlogo"
        app:layout_constraintRight_toLeftOf="@id/verfication"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grade"
        android:textColor="#050A30"
        android:textSize="12sp"
        android:text="Accredited with 'A' grade by NAAC"
        app:layout_constraintTop_toBottomOf="@id/deemed"
        app:layout_constraintLeft_toRightOf="@id/sistlogo"
        app:layout_constraintRight_toLeftOf="@id/verfication"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:textColor="#050A30"
        android:textSize="12sp"
        android:text="Jeppiar Nagar,Rajiv Gandhi Salai,Chennai-600 119"
        app:layout_constraintTop_toBottomOf="@id/grade"
        app:layout_constraintLeft_toRightOf="@id/sistlogo"
        app:layout_constraintRight_toLeftOf="@id/verfication"/>
    <View
        android:id="@+id/line2"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintLeft_toRightOf="@id/sistlogo"
        app:layout_constraintRight_toLeftOf="@id/verfication"
        />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/phoneno"
          android:text="Phone:044-2450 3150/3151/3152/3155 Fax:044-2450 2344"
          android:textStyle="bold"
          android:textColor="#050A30"
          android:textSize="12sp"
          app:layout_constraintTop_toBottomOf="@id/line2"
          app:layout_constraintLeft_toRightOf="@id/sistlogo"
          app:layout_constraintRight_toLeftOf="@id/verfication"
          />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/website"
        android:text="www.sathyabama.ac.in"
        android:textStyle="bold"
        android:textColor="#050A30"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/phoneno"
        app:layout_constraintLeft_toRightOf="@id/sistlogo"
        app:layout_constraintRight_toLeftOf="@id/verfication"

        />
    <View
        android:id="@+id/line3"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/website"
        app:layout_constraintLeft_toRightOf="@id/sistlogo"
        app:layout_constraintRight_toLeftOf="@id/verfication"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refid"
        android:text="Ref:"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/line3"
        app:layout_constraintLeft_toLeftOf="parent"
        />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/bonifide"
           android:layout_marginTop="20dp"
           android:text="BONAFIDE &amp; EXPENDITURE CERTIFICATE"
           android:textStyle="bold"
           android:textSize="19sp"
           android:textColor="@color/black"
           app:layout_constraintTop_toBottomOf="@+id/refid"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signature"
        android:layout_marginTop="345dp"
        android:text="DEAN (STUDENT AFFAIRS)"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_marginRight="40dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/bonifide"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>