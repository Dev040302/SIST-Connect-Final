<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Student_Section.Food">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/hsc">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juice"
                android:background="@drawable/border__1"
                android:layout_margin="8dp"
                android:padding="5dp"
                android:textSize="16dp"
                android:onClick="Juice"
                android:id="@+id/juice"
                />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiffin"
                    android:background="@drawable/border__1"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:onClick="Tiffin"
                    android:id="@+id/tiffin"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:background="@drawable/border__1"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:onClick="Chat"
                    android:id="@+id/chat"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chinese"
                    android:background="@drawable/border__1"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:onClick="Chinese"
                    android:id="@+id/chinese"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beverage &amp; Snacks"
                    android:background="@drawable/border__1"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:onClick="BS"
                    android:id="@+id/bs"/>

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview"
            android:padding="10dp"
            android:layout_above="@id/ttl"
            android:layout_below="@id/hsc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL - "
            android:textSize="32dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:id="@+id/ttl"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/sendbtn"/>

    </RelativeLayout>

</FrameLayout>