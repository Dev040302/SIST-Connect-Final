<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Section.Attadence">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profilepic"
        app:cardCornerRadius="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:strokeColor="@color/black"
        android:layout_marginTop="35dp"
        app:strokeWidth="2dp"
        >
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/attdimg"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_person_24"
            tools:ignore="MissingConstraints" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/attdne"
        android:text="Name: Deepak Sridharan M"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        app:layout_constraintTop_toBottomOf="@id/profilepic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/attdreg"
        android:text="Register Number: 39110254"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        app:layout_constraintTop_toBottomOf="@id/attdne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/prsbtn"
        android:text="P"
        android:textSize="100sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/attdreg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/adsbtn"
        android:backgroundTint="#0cdb0b"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"

        android:layout_width="200dp"
        android:layout_height="250dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/adsbtn"
        android:text="A"
        android:textSize="100sp"
        android:textColor="@color/white"
        android:backgroundTint="#FF0000"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/attdreg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/prsbtn"
        android:layout_width="200dp"
        android:layout_height="250dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>