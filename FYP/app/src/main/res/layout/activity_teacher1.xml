<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Section.Teacher1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_centerVertical="true">


        <ImageView
            android:id="@+id/teacherpic"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"

            android:src="@drawable/teacherpic" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="attendance"
            android:textSize="24dp"
            app:cornerRadius="12dp"
            android:padding="16dp"
            android:id="@+id/teaattn"
            android:layout_marginTop="100dp"
            android:layout_below="@id/teacherpic"/>


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz"
            android:textSize="24dp"
            app:cornerRadius="12dp"
            android:padding="16dp"
            android:id="@+id/teaquiz"
            android:layout_below="@id/teaattn"/>




    </RelativeLayout>

</RelativeLayout>